{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %} Add Album {% endblock %}

{% block body %}

{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.artist) }}
    {{ form_row(form.isrc) }}
    {{ form_row(form.image) }}
    <ol class="track" data-prototype="{{ form_widget(form.albumTracks.vars.prototype)|e('html_attr') }}">
        {% for track in form.albumTracks %}
            <p>{{ form_row(track) }}</p>
        {% endfor %}
    </ol>
{#    o<button type="button" class="form control btn btn-primary add_tag_link">Add a track</button>#}
{{ form_end(form) }}
{% endblock %}
