{# app/Resources/views/sidebar.html.twig #}
<nav id="sidebar">

    <div id="hideSideBar">
        <i class="glyphicon glyphicon-triangle-left"></i>
    </div>

    <div class="sidebar-header">
        <h4><span class="glyphicon glyphicon-user"></span>
            {{ app.user.getFullName() }}</h4>
    </div>

    <ul class="list-unstyled components">
        <li><a class="dropdown-item" href="{{ path('album_new') }}">Add Album</a></li>
        <li><a class="dropdown-item" href="{{ path('fos_user_profile_edit') }}">Edit Profile</a></li>
        <li><a class="dropdown-item" href="{{ path('fos_user_change_password') }}">Change Password</a></li>
        <li><a href="{{ path('fos_user_security_logout') }}">Logout
                <span class="glyphicon glyphicon-log-out"></span></a></li>
    </ul>
</nav>

<script type="text/javascript">
    $(document).ready(function () {
        $("#sidebar").mCustomScrollbar({
            theme: "minimal"
        });

        $('#hideSideBar, .overlay').on('click', function () {
            // hideSideBar
            $('#sidebar').removeClass('active');
            // hide overlay
            $('.overlay').removeClass('active');
        });

        $('#sidebarCollapse').on('click', function () {
            // open sidebar
            $('#sidebar').addClass('active');
            // fade in the overlay
            $('.overlay').addClass('active');
            $('.collapse.in').toggleClass('in');
            $('a[aria-expanded=true]').attr('aria-expanded', 'false');
        });
    });
</script>