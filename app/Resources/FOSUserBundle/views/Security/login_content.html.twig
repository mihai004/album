{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-8">
    <div class="col-md-offset-5" id="login_div">
        <h3 style="padding-bottom: 15px;"> Login </h3>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}

            <div class="form-group row">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       autocomplete="username"/>
            </div>

            <div class="form-group row">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required"
                       autocomplete="current-password"/>
            </div>

            <div class="form-group row">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class="form-group row">
                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>

            <div class="form-group row">
                <a value="{{ 'security.login.submit'|trans }}" class="btn btn-danger" id=""> Forgot password? </a>
            </div>

        </form>
    </div>
</div>