{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

<div class="col-lg-8">
    <div class="col-md-offset-5" id="signup_div">
        <div id="signup_fields_div">
            <h3 style="text-align: center"> Change Your Password </h3>
            </br>
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

            {{ form_row(form.current_password) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.plainPassword) }}
        </div>
        <div class="form-group row">
            <input class="btn btn-success"  type="submit" value="{{ 'change_password.submit'|trans }}"/>
        </div>
            {{ form_end(form) }}
    </div>
</div>